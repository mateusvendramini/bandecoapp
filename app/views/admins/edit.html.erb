<% if  logged_in? %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
    </div>




    <div class="center jumbotron">
<h1>Editing Admin</h1>





<%= form_for @admin, :url =>{:action => "update", :id =>@admin} do |f| %>
<p>Login: <%= f.text_field 'login' %></p>
<p>Senha: <%= f.text_field 'senha' %></p>
<p>Confirmacao: <%= f.text_field 'senha_confirmation' %></p>
<p>nome: <%= f.text_field 'nome' %></p>
<p>email: <%= f.text_field 'email' %></p>
<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Show', @admin %> |
<%= link_to 'Back', admins_path %>
</div>



    <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>



  </body>
</html>


