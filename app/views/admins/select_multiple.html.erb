<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 80%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}
h1,h2{
  text-align: center;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
</head>



<p id="notice"><%= @notice %></p>

<h1>Admins</h1>
<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Nome</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <h2> Tela de confirmação de exclusão</h2>
  <h2>Selecione os Admins que você realmente deseja excluir</h2>
  <tbody>
    <%= form_tag :action => 'delete_multiple', :url => 'select_multiple_admin_path' do %>
    <% for admin in @admins %>
      <tr>
        <td><%= admin.login %></td>
        <td><%= admin.nome %></td>
        <td><%= admin.email %></td>
        
        <td><%=check_box_tag "admin_ids[]", admin.id%></td>

      
      </tr>
    <% end %>
    <%= submit_tag "Deleta administradores marcados" %>
  </tbody>
</table>
<br>

<% end %>

<%= link_to 'Voltar para home', controller: "admins", action: "index" %>
