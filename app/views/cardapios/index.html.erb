<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
    </div>




    <div class="center jumbotron">
<h1>Cardapios</h1>
<table>
  <thead>
    <tr>
      <th>Restaurante</th>
      <th>dia semana</th>
      <th>conteudo</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <% if logged_in? %>
  <tbody>
    
    <% for cardapio in @cardapios %>
      <tr>
        <td><%= Restaurante.find(cardapio.id_restaurante).nome %></td>
        <td><%= cardapio.dia_semana %></td>
        <td><%= cardapio.conteudo %></td>
        <% url = "/cardapios/" + cardapio.id.to_s + "/edit/" %>
        <td><%= link_to 'edit', url %></td>

      
      </tr>
    <% end %>
  </tbody>
</table>
<br>



</div>
<% else %>
<h1>NÃ£o logado </h1>
<meta http-equiv="refresh" content="0; url=/" /> 

<% end %> 


</div>



    <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>
    </div>



  </body>
</html>