<style>
input[type=text], select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

input[type=submit] {
    width: 100%;
    background-color: rgb(72, 99, 210);
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

input[type=submit]:hover {
    background-color: rgb(0, 150, 255);
}

div {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
}
a:link, a:visited {
    background-color: #f44336;
    color: white;
    padding: 14px 25px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
}


a:hover, a:active {
    background-color: red;
}
</style>

<h1 style="text-align:center;">Inserir novo restaurante</h1>

<%= render 'form', restaurante: @restaurante %>

<p style="text-align:center;"><%= link_to 'Voltar', restaurantes_path %></p>
