<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
</head>

<p id="notice"><%= notice %></p>

<h1 style="text-align:center;">Restaurantes</h1>

<body>
<table style="width:100%">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cardapio</th>
      <th>Layout</th>
      <th>Mapa</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurantes.each do |restaurante| %>
      <tr>
        <td><%= restaurante.nome %></td>
        <td><%= link_to 'Link para Cardápio', restaurante.cardapio %></td>
        <td><%= link_to 'Link para o layout da fila', restaurante.layout %></td>
        <td><img src=<%=restaurante.mapa %> width="150" height="50" /img></td>
        <td><%= restaurante.foto %></td>
        <td><%= link_to 'Mostrar', restaurante %></td>
        <td><%= link_to 'Editar', edit_restaurante_path(restaurante) %></td>
        <td><%= link_to 'Apagar restaurante', {:action => 'delete', :id => restaurante.id}, data: { confirm: "Você tem certeza?" } %></</td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
<br>

<%= link_to 'Novo Restaurante', new_restaurante_path %>
