<head>
<style>
{
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

p {
    padding: 8px;
    border-bottom: 1px solid #ddd;
}

p:nth-child(even){background-color: #f2f2f2;}

p:hover {background-color: #ddd;}

a:link, a:visited {
    background-color: #f44336;
    color: white;
    padding: 14px 25px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
}


a:hover, a:active {
    background-color: red;
}

</style>
</head>

<p id="notice"><%= notice %></p>

<h3 style="text-align:center;">Informações do restaurante</h3>

   
<p>
  <strong>Nome:</strong>
  <%= @restaurante.nome %>
</p>

<p>
  <strong>Cardapio:</strong>
  <%= @restaurante.cardapio %>
</p>

<p>
  <strong>Layout:</strong>
  <%= @restaurante.layout %>
</p>

<p>
  <strong>Mapa:</strong>
  <%= @restaurante.mapa %>
</p>

<p>
  <strong>Foto:</strong>
  <%= @restaurante.foto %>
</p>

<p style="text-align:center;"><%= link_to 'Editar', edit_restaurante_path(@restaurante) %></p>
<p style="text-align:center;"><%= link_to 'Voltar', restaurantes_path %></p>
